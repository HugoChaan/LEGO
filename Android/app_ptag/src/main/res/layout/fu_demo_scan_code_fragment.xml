<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.faceunity.app_ptag.weight.zixing.zxing.ZXingView
        android:id="@+id/zxingview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:qrcv_animTime="1000"
        app:qrcv_barCodeTipText=""
        app:qrcv_borderColor="#66303344"
        app:qrcv_borderSize="0.1dp"
        app:qrcv_cornerColor="#66303344"
        app:qrcv_cornerDisplayType="center"
        app:qrcv_cornerLength="0dp"
        app:qrcv_cornerSize="0dp"
        app:qrcv_isAutoZoom="true"
        app:qrcv_isBarcode="false"
        app:qrcv_isOnlyDecodeScanBoxArea="true"
        app:qrcv_isScanLineReverse="false"
        app:qrcv_isShowDefaultGridScanLineDrawable="false"
        app:qrcv_isShowDefaultScanLineDrawable="true"
        app:qrcv_customScanLineDrawable="@mipmap/icon_scanning_line"
        app:qrcv_isShowLocationPoint="false"
        app:qrcv_isShowTipBackground="true"
        app:qrcv_isShowTipTextAsSingleLine="false"
        app:qrcv_isTipTextBelowRect="false"
        app:qrcv_maskColor="#66303344"
        app:qrcv_qrCodeTipText=""
        app:qrcv_rectWidth="310dp"
        app:qrcv_barcodeRectHeight="310dp"
        app:qrcv_scanLineColor="@color/blue_700"
        app:qrcv_scanLineMargin="0dp"
        app:qrcv_scanLineSize="0.5dp"
        app:qrcv_tipTextColor="@android:color/white"
        app:qrcv_tipTextSize="12sp"
        app:qrcv_topOffset="210dp"
        app:qrcv_verticalBias="-1" />
    <FrameLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/fl_back"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="20dp">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@mipmap/icon_navbar_backarrow_white" />
    </FrameLayout>
    <FrameLayout
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/btn_thumb_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/fl_select_photo"
        android:layout_marginBottom="32dp">
        <ImageView
            android:id="@+id/iv_list"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@mipmap/icon_shooting_album"
            android:layout_gravity="center"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>