<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="312dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_chat"
    android:clickable="true"
    >

    <LinearLayout
        android:id="@+id/mode_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:padding="4dp"
        android:background="@drawable/bg_interaction_control_mode_group"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/mode_lego"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:minWidth="52dp"
            android:minHeight="28dp"
            android:text="插件"
            android:textColor="#4A5076"
            android:includeFontPadding="false"
            android:background="@drawable/bg_interaction_control_mode_item"
            android:visibility="visible"
            />
        <TextView
            android:id="@+id/mode_switcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:minWidth="52dp"
            android:minHeight="28dp"
            android:text="模式"
            android:textColor="#4A5076"
            android:includeFontPadding="false"
            android:background="@drawable/bg_interaction_control_mode_item"
            android:visibility="visible"
            />
        <TextView
            android:id="@+id/mode_skill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:minWidth="52dp"
            android:minHeight="28dp"
            android:text="技能"
            android:textColor="#4A5076"
            android:includeFontPadding="false"
            android:visibility="gone"
            android:background="@drawable/bg_interaction_control_mode_item"
            />
        <TextView
            android:id="@+id/mode_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:minWidth="52dp"
            android:minHeight="28dp"
            android:text="形象"
            android:textColor="#4A5076"
            android:includeFontPadding="false"
            android:background="@drawable/bg_interaction_control_mode_item"
            />
        <TextView
            android:id="@+id/mode_animation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:minWidth="52dp"
            android:minHeight="28dp"
            android:text="动作"
            android:textColor="#4A5076"
            android:includeFontPadding="false"
            android:visibility="gone"
            android:background="@drawable/bg_interaction_control_mode_item"
            />
        <TextView
            android:id="@+id/mode_emotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:minWidth="52dp"
            android:minHeight="28dp"
            android:text="表情"
            android:textColor="#4A5076"
            android:includeFontPadding="false"
            android:background="@drawable/bg_interaction_control_mode_item"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/mode_tone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:minWidth="52dp"
            android:minHeight="28dp"
            android:text="音色"
            android:textColor="#4A5076"
            android:includeFontPadding="false"
            android:visibility="gone"
            android:background="@drawable/bg_interaction_control_mode_item"
            />
        <TextView
            android:id="@+id/mode_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:minWidth="52dp"
            android:minHeight="28dp"
            android:text="背景"
            android:textColor="#4A5076"
            android:includeFontPadding="false"
            android:visibility="gone"
            android:background="@drawable/bg_interaction_control_mode_item"
            />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/expand_layout"
        android:layout_width="match_parent"
        android:layout_height="244dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/mode_group"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>