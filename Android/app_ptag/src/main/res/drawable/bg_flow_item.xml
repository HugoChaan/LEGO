<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:width="109dp" android:height="32dp" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#F4F7FF" />
            <corners android:radius="16dp" />
            <item android:name="android:shadowColor">#ffdde6ff</item>
            <item android:name="android:shadowDx">0</item>
            <item android:name="android:shadowDy">2</item>
        </shape>
    </item>

    <item android:width="109dp" android:height="32dp">
        <shape android:shape="rectangle">
            <solid android:color="#ffffffff" />
            <corners android:radius="16dp" />
            <item android:name="android:shadowColor">#ffdde6ff</item>
            <item android:name="android:shadowDx">0</item>
            <item android:name="android:shadowDy">2</item>
        </shape>
    </item>
</selector>